<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, User!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep up the great work! ðŸ’ª"
                    android:textSize="14sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FF6B9D">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Profile"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Steps Goal Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/stepsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#1E1E1E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Circular Progress for Steps -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/stepsProgressBar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:progress="50"
                        android:max="100"
                        app:indicatorColor="#FFA726"
                        app:trackColor="#2A2A2A"
                        app:trackThickness="10dp"
                        app:indicatorSize="90dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="28dp"
                        android:backgroundTint="#FFA726">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/steps"
                            android:src="@drawable/steps"
                            app:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <!-- Steps Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stepsProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/steps"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFA726" />

                    <TextView
                        android:id="@+id/stepsPercentageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="5,000/10,000 steps"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50% Complete"
                        android:textSize="12sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Calories Goal Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/caloriesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#1E1E1E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Circular Progress for Calories -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/caloriesProgressBar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:progress="20"
                        android:max="100"
                        app:indicatorColor="#FF6B9D"
                        app:trackColor="#2A2A2A"
                        app:trackThickness="10dp"
                        app:indicatorSize="90dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="28dp"
                        android:backgroundTint="#FF6B9D">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/calories_burned"
                            android:src="@drawable/flame"
                            app:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <!-- Calories Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/caloriesProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories_burned"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B9D" />

                    <TextView
                        android:id="@+id/caloriesPercentageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="33/420 kcal"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20% Complete"
                        android:textSize="12sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Active Time Goal Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/activeTimeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#1E1E1E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caloriesCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Circular Progress for Active Time -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/activeTimeProgressBar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:progress="10"
                        android:max="100"
                        app:indicatorColor="#66D9EF"
                        app:trackColor="#2A2A2A"
                        app:trackThickness="10dp"
                        app:indicatorSize="90dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="28dp"
                        android:backgroundTint="#66D9EF">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/active_time"
                            android:src="@drawable/clock"
                            app:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <!-- Active Time Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activeTimeProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_duration"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#66D9EF" />

                    <TextView
                        android:id="@+id/activeTimePercentageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="3/30 min"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10% Complete"
                        android:textSize="12sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons - Top Row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="Profile"
            android:textSize="15sp"
            app:cornerRadius="28dp"
            app:backgroundTint="#FF6B9D"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@+id/setGoals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activeTimeCard" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setGoals"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Set Goals"
            android:textSize="15sp"
            app:cornerRadius="28dp"
            app:backgroundTint="#FFA726"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editProfileButton"
            app:layout_constraintTop_toBottomOf="@+id/activeTimeCard" />

        <!-- Action Buttons - Bottom Row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="History"
            android:textSize="15sp"
            app:cornerRadius="28dp"
            app:backgroundTint="#66D9EF"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@+id/saveDataButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProfileButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveDataButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Save Data"
            android:textSize="15sp"
            app:cornerRadius="28dp"
            app:backgroundTint="#A78BFA"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/historyButton"
            app:layout_constraintTop_toBottomOf="@+id/setGoals" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>